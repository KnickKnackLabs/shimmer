#!/bin/bash
#MISE description="Configure Status field with standard workflow options"
#USAGE arg "[project_number]" help="Project number (defaults to auto-detect)"
set -eo pipefail

# This is a convenience wrapper around pm:field-edit for our standard Status values
# Usage: PROJECT_DIR=/path/to/repo mise run pm:setup-status

SCRIPT_DIR="$(dirname "$0")"
PROJECT_NUM="${1:-}"

echo "Setting up standard Status field..."
echo ""

PROJECT_DIR="${PROJECT_DIR:-.}" "$SCRIPT_DIR/field-edit" "Status" "Backlog,Ready,In Progress,In Review,Done" "GRAY,GREEN,YELLOW,PURPLE,BLUE"
