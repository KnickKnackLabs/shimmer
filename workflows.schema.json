{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ricon-family/shimmer/workflows.schema.json",
  "title": "Workflow Configuration",
  "description": "Defines jobs, their agent assignments, and schedules for workflow generation",

  "type": "object",
  "required": ["jobs"],
  "properties": {
    "jobs": {
      "type": "object",
      "description": "Map of job names to their configuration",
      "additionalProperties": { "$ref": "#/$defs/job" }
    }
  },

  "$defs": {
    "job": {
      "title": "Job",
      "description": "Configuration for a job type",
      "type": "object",
      "required": ["agents"],
      "properties": {
        "agents": {
          "type": "object",
          "description": "Map of agent names to their assignment configuration",
          "additionalProperties": { "$ref": "#/$defs/assignment" }
        }
      }
    },

    "assignment": {
      "title": "Assignment",
      "description": "Configuration for an agent's job assignment",
      "type": "object",
      "properties": {
        "schedule": {
          "type": "string",
          "description": "Cron expression (e.g., '0 */4 * * *' for every 4 hours)",
          "pattern": "^[0-9*,/-]+ [0-9*,/-]+ [0-9*,/-]+ [0-9*,/-]+ [0-9*,/-]+$"
        }
      }
    }
  }
}
